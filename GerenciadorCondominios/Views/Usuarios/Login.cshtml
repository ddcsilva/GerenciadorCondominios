@model GerenciadorCondominios.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "CondoNexus";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css">
    <title>CondoNexus</title>
</head>
<body class="bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md container mx-auto px-4 py-20">
        <div class="formulario-login bg-white rounded-lg shadow-lg p-10">
            <div class="centralizar text-center">
                <span class="material-icons text-blue-500 text-4xl mb-4">
                    home
                </span>
                <h5 class="text-2xl font-semibold titulo-formulario-login texto-gradiente">Login de moradores</h5>
            </div>
            <form asp-action="Login">
                <div class="mb-4">
                    <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input asp-for="Email" autofocus class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Email" />
                    <span asp-validation-for="Email" class="mensagem-validacao text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label for="Senha" class="block text-sm font-medium text-gray-700">Senha</label>
                    <input asp-for="Senha" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Senha" type="password" />
                    <span asp-validation-for="Senha" class="mensagem-validacao text-red-600 text-sm"></span>
                </div>

                <div class="text-center mt-6">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md">Login</button>
                </div>
                <div class="text-center mt-4">
                    <a asp-controller="Usuarios" asp-action="Registro" class="text-blue-500 hover:text-blue-600">Não possuo uma conta</a>
                </div>
            </form>
        </div>
    </div>
    <script src="~/js/login.js"></script>
</body>
</html>

