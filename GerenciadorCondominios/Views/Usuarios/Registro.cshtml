@model GerenciadorCondominios.ViewModels.RegistroViewModel
@{
    Layout = null;
    ViewData["Title"] = "Cadastro de moradores";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/registro.css">
    <title>Novo morador</title>
</head>
<body class="bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 min-h-screen">
    <div class="container mx-auto px-4 py-20">
        <div class="bg-white rounded-lg shadow-lg p-10">
            <div class="centralizar text-center">
                <span class="material-icons text-blue-500 text-4xl mb-4">
                    person_add
                </span>
                <h5 class="text-2xl font-semibold titulo-formulario-registro texto-gradiente">Novo morador</h5>
            </div>
            <form asp-action="Registro" enctype="multipart/form-data">
                <div class="grid grid-cols-1 md:grid-cols-5 gap-5">
                    <div class="col-span-1 md:col-span-1 flex items-center justify-center">
                        <div class="relative h-48 w-32 bg-gray-200 rounded-md cursor-pointer" onclick="document.getElementById('foto').click();" style="max-width: 180px;">
                            <i class="material-icons absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 hidden" style="font-size: 96px;">account_circle</i>
                            <img class="image-preview hidden h-full w-full object-cover object-center rounded-md" alt="Foto do morador" />
                            <span class="text-sm text-gray-600 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">Clique para adicionar uma foto</span>
                        </div>
                        <input asp-for="Foto" type="file" class="hidden" id="foto" onchange="previewFile()" aria-label="Selecionar foto do morador" />
                    </div>
                    <div class="col-span-1 md:col-span-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="mb-4 col-span-1">
                                <label for="Nome" class="block text-sm font-medium text-gray-700">Nome</label>
                                <input asp-for="Nome" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Nome" />
                                <span asp-validation-for="Nome" class="mensagem-validacao text-red-600 text-sm"></span>
                            </div>

                            <div class="mb-4 col-span-1">
                                <label for="CPF" class="block text-sm font-medium text-gray-700">CPF</label>
                                <input asp-for="CPF" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="CPF" />
                                <span asp-validation-for="CPF" class="mensagem-validacao text-red-600 text-sm"></span>
                            </div>

                            <div class="mb-4 col-span-1">
                                <label for="Telefone" class="block text-sm font-medium text-gray-700">Telefone</label>
                                <input asp-for="Telefone" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Telefone" />
                                <span asp-validation-for="Telefone" class="mensagem-validacao text-red-600 text-sm"></span>
                            </div>

                            <div class="mb-4 col-span-1">
                                <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                                <input asp-for="Email" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Email" />
                                <span asp-validation-for="Email" class="mensagem-validacao text-red-600 text-sm"></span>
                            </div>

                            <div class="mb-4 col-span-1">
                                <label for="Senha" class="block text-sm font-medium text-gray-700">Senha</label>
                                <input asp-for="Senha" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="Senha" />
                                <span asp-validation-for="Senha" class="mensagem-validacao text-red-600 text-sm"></span>
                                <div class="mt-2">
                                    <div class="bg-gray-200 h-2 rounded-md">
                                        <div id="password-strength-bar" class="h-2 rounded-md hidden"></div>
                                    </div>
                                    <span id="password-strength-text" class="text-xs"></span>
                                </div>
                            </div>

                            <div class="mb-4 col-span-1">
                                <label for="ConfirmarSenha" class="block text-sm font-medium text-gray-700">Confirmar senha</label>
                                <input asp-for="SenhaConfirmada" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" id="ConfirmarSenha" />
                                <span asp-validation-for="SenhaConfirmada" class="mensagem-validacao text-red-600 text-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-6">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md">Registrar</button>
                </div>
                <div class="text-center mt-4">
                    <a asp-controller="Usuarios" asp-action="Login" class="text-blue-500 hover:text-blue-600">Já possuo uma conta</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>

    <script src="~/js/registro.js"></script>
</body>
</html>


